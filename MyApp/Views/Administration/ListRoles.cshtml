@model IEnumerable<IdentityRole>

@{ 
    ViewBag.Title = "All Roles";
}
<a  asp-controller="Administration" asp-action="CreateRole" class="btn btn-primary" style="width:auto">
        Add new role.
</a>
@if (Model.Any())
{

    foreach (var role in Model)
    {
    <div class=" card mb-3">
        <div class=" card-header">
            Role Id: @role.Id
        </div>
        <div class=" card-body">
            Role Name: @role.Name
        </div>
        <div class=" card-footer">
            <form  asp-action="DeleteRole" asp-route-id="@role.Id">
                <a class="btn btn-primary" asp-controller="Administration" asp-action="EditRole" asp-route-id="@role.Id">Edit</a>
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>
    </div>
    }

}
else 
{
    <div class=" card">
        <div class="card-header-tabs-header">
            No roles added.
        </div>
         <div class="card-body">
             <h5 class="card-title">
                 Use button to create a role.
             </h5>
             <a asp-controller="Administration" asp-action="CreateRole" class="btn btn-primary" style="width:auto">
                 Create Role
             </a>
         </div>
    </div>
}