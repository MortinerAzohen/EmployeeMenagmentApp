@model IEnumerable<ApplicationUser>

@{
    ViewBag.Title = "List of Users";
}
<h1>All Users</h1>
@if (Model.Any())
{
<a asp-controller="Account" asp-action="Register" class="btn btn-primary" style="width:auto">
    Add new user.
</a>
    foreach (var user in Model)
    {
        <div class=" card mb-3">
            <div class=" card-header">
                User Id: @user.Id
            </div>
            <div class=" card-body">
                <h5 class="card-title">User Email: @user.UserName</h5>
                <h5 class="card-title">User City: @user.City</h5>
            </div>
            <div class=" card-footer">
                <form asp-action="DeleteUser" asp-route-id="@user.Id">
                    <a class="btn btn-primary" asp-controller="Administration" asp-action="EditUser" asp-route-id="@user.Id">Edit</a>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    }

}
else
{
    <div class=" card">
        <div class="card-header-tabs-header">
            No user created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use button to create a new user.
            </h5>
            <a asp-controller="Account" asp-action="Register" class="btn btn-primary" style="width:auto">
                Add new user.
            </a>
        </div>
    </div>
}