@model HomeDetailsViewModel
@{
    ViewBag.Title = "Employee Details";
}

    <div class="row justify-content-center m-3">
        <div class="col-sm-8">
            <div class="card">
                <div class="card-header">
                    <h1>@Model.Employee.FullName</h1>
                </div>

                <div class="card-body text-center">
                    <img class ="card-img-top" src="~/images/pobrane.png" alt="Alternate Text" />
                    <h4>Employee Id: @Model.Employee.ID</h4>
                    <h4>Email: @Model.Employee.Email</h4>
                    <h4>Department: @Model.Employee.Departmennt</h4>
                </div>
                <div class="card=footer text-center">
                    <a href="#" class="btn btn-primary">Back</a>
                    <a href="#" class="btn btn-primary">Edit</a>
                    <a href="#" class="btn btn-danger">Delete</a>
                </div>
            </div>
        </div>
    </div>